.pick-component
    h2.secondary-title {{observation.school}}
    h3.secondary-title {{observationType}}
    h3.secondary-title {{observation.element.name}}
    .components(ng-repeat="component in observation.element.components")
        h3 {{component.name}}
        .indicators(ng-repeat="indicator in component.indicators")
            .indicator.align-elements-vertically
                input(type="checkbox", for="{{indicator}}" ng-click='selectIndicator($event, indicator)' ng-model='item.checked')
                label {{indicator}}
                i.fa.fa-question-circle(ng-click="showLevelInformationForIndicatorDialog($event, indicator)")
            .indicator-rating(ng-show='item.checked')
                span(uib-rating ng-model='rate' max='max' read-only='!item.checked')
                i.fa.fa-plus-circle.fa-2x(ng-click='attachEvidence(component, indicator)')
    .element-button-group
        button(ng-repeat="element in data.elements", ng-show="element.name != observation.element.name", ng-style='{"background-color": element.color}') {{element.name}}
        button Make observations at this school
        button Select another school





