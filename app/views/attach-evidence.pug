.attach-evidence
    .titles-container
        h2.secondary-title {{observation.school}}
        h2.secondary-title {{observationType}}
        h2.secondary-title {{observation.ratingGroup.element.name}}
        h2.secondary-title {{observation.ratingGroup.component}}
    section
        h3 Attach evidence for {{observation.ratingGroup.indicator}}
        p From the list of observations below, click the right arrows to see specific evidence you can attach to support your score
        .saved-observation-container
            .saved-observation(ng-repeat="savedObservation in observations | orderBy: '-createdAt' | filter:searchText ", , style="cursor:pointer;")
                .content
                    p {{savedObservation.observationKind}} Observation
                    span {{savedObservation.grade}}, Â 
                    span {{savedObservation.teacher}}
                    p {{savedObservation.readableDate}}
                .icon-holder
                    i.fa.fa-caret-right.fa-3x(ng-click='attachEvidenceForObservation(savedObservation)')
