.observations
    section
        .titles-container
            h1.title Observations
        .observations-buttons
            button.primary-button(ng-click="observationType('Making Observations')" ui-sref='newObservation') Start a new observation
            button.primary-button(ng-click="observationType('Scoring based on observations')" ui-sref='scoreObservation') Score based on observation
    section
        .titles-container
            h1.title My Observations
        .filter-observation
            input(type='text' ng-model='searchText' placeholder='Filter Observations')
        .saved-observation-container
            .saved-observation(ng-repeat="observation in observations | orderBy: '-createdAt' | filter:searchText ", ng-click="showObservation(observation)", style="cursor:pointer; display: flex; flex-direction: column; padding: 20px")
                p {{observation.observationKind}} Observation
                span {{observation.grade}}, Â 
                span {{observation.teacher}}
                p {{observation.readableDate}}
