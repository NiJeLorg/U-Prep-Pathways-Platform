.ul-padding-30
    .l-flex-space-between.ul-border-bottom
        h1 {{getTitle()}}
        img.ul-cursor-pointer(src='assets/icons/x-icon.svg' ng-click='cancel()')
    .ul-padding-30
        ng-include(src='templateUrl')
        div
            h2 Step 1: Choose a School
            p.ul-margin-bottom-20 Below is a list of schools you are able to observe
            .c-buttons-holder
                span(ng-repeat='school in schools')
                    button.ul-margin-bottom-20(ng-class="(checkIfSchoolIsUPSM(school.name) ? 'upsm-school' : 'non-upsm-school')" ng-click='recordSchool(school)') {{school.name}}

